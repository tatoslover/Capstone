# Planeswalker's Primer - Frontend Development Environment
# Environment variables for local development

# Backend API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_ENVIRONMENT=development

# Development Features
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_API_TESTING=true
NEXT_PUBLIC_SHOW_CONNECTION_STATUS=true

# Mock Data Settings
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_OFFLINE_FIRST=false

# External APIs
NEXT_PUBLIC_SCRYFALL_API=https://api.scryfall.com

# Development URLs
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000

# Connection Settings
NEXT_PUBLIC_API_TIMEOUT=5000
NEXT_PUBLIC_HEALTH_CHECK_INTERVAL=30000

# UI Development Settings
NEXT_PUBLIC_SHOW_COMPONENT_BORDERS=false
NEXT_PUBLIC_ENABLE_PERFORMANCE_LOGS=false
