# Planeswalker's Primer - Development Environment Configuration
# This file contains environment variables for local development

# Database Configuration (Local PostgreSQL via Docker)
DATABASE_URL=postgresql://postgres:password@localhost:5432/plansewalker_primer

# Server Configuration
PORT=3001
NODE_ENV=development

# API Configuration
API_BASE_URL=http://localhost:3001

# External API Configuration
SCRYFALL_API_BASE=https://api.scryfall.com

# Development Settings
DEBUG=true
LOG_LEVEL=debug

# CORS Settings for local development
FRONTEND_URL=http://localhost:3000

# Rate Limiting (more lenient for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Database Pool Settings (for local development)
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# Development Features
ENABLE_API_DOCS=true
ENABLE_DETAILED_ERRORS=true
ENABLE_REQUEST_LOGGING=true

# Test Data Settings
INCLUDE_SAMPLE_DATA=true
AUTO_SEED_DATABASE=true
